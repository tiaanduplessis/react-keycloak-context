{
  "name": "react-keycloak-context",
  "version": "1.0.4",
  "description": "A Keycloak provider for React",
  "main": "dist/react-keycloak-context.js",
  "source": "src/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "lint": "standard --fix",
    "build": "microbundle -o dist/ --sourcemap false --compress false --jsx React.createElement --format cjs",
    "dev": "microbundle watch -o dist/ --sourcemap false --compress false --jsx React.createElement --format cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiaanduplessis/react-keycloak-context.git"
  },
  "keywords": [
    "react",
    "context",
    "keycloak",
    "auth"
  ],
  "author": "Tiaan du Plessis <tiaanduplessis@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tiaanduplessis/react-keycloak-context/issues"
  },
  "homepage": "https://github.com/tiaanduplessis/react-keycloak-context#readme",
  "peerDependencies": {
    "keycloak-js": "^6.0.1 || ^7.0.0",
    "react": "*"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "babel-eslint": "^10.0.1",
    "microbundle": "^0.11.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": "dist",
    "env": {
      "browser": true
    }
  }
}
